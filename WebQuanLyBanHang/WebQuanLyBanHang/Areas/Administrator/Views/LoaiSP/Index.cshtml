@model IEnumerable<WebQuanLyBanHang.Model.LoaiSP>

@{
    ViewBag.Title = "Index";
}

<h2>Danh mục loại sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã loại sản phẩm
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaLoaiSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiSP)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaLoaiSP }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaLoaiSP }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.MaLoaiSP })
        </td>
    </tr>
}

</table>
