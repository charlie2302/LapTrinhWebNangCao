@model IEnumerable<WebQuanLyBanHang.Model.User>

@{
    ViewBag.Title = "Index";
}

<h2>Danh mục quản trị viên</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Username
        </th>
        <th>
            Password
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Avatar
        </th>
        <th>
            Allowed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Avatar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Allowed)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Userid }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Userid }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.Userid })
        </td>
    </tr>
}

</table>
