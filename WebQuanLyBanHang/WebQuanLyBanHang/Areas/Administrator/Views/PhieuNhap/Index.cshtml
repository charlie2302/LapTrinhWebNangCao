@model IEnumerable<WebQuanLyBanHang.Model.PhieuNhap>

@{
    ViewBag.Title = "Index";
}

<h2>Danh mục phiếu nhập</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã phiếu nhập
        </th>
        <th>
            Mã nhập xuất
        </th>
        <th>
            Tháng
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng nhập
        </th>
        <th>
            Giá nhập
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaCTPNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThongKeNhapXuat.MaNX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThongKeNhapXuat.Thang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SLNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaNhap)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaCTPNhap }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaCTPNhap }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.MaCTPNhap })
        </td>
    </tr>
}

</table>
