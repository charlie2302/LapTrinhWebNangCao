@{
    Layout = "~/Views/Shared/_CartLayout.cshtml";
}
@using WebQuanLyBanHang.Models

@model CartItem
    @{ 
        List<CartItem> LstCart = ViewBag.Cart as List<CartItem>;
    }
<div class="logo">
    <h3>Giỏ hàng của bạn</h3>
</div>
<div class="cart">
    <div class="cart-bottom">
        <div class="table">
            <table>
                <tbody>
                    <tr class="main-heading">
                        <th>Hình ảnh</th>
                        <th class="long-txt">Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Tổng cộng</th>
                    </tr>
                    @foreach (var item in LstCart)
                    {
                        if (Model.masp == item.masp)
                        {
                            using (Html.BeginForm())
                            {
                                <tr class="cake-top">
                                    <td class="cakes">
                                        <div class="product-img">
                                            <img style="max-width:50%" src=@Url.Content("~/Content/images/" + item.hinhanh)>
                                        </div>
                                    </td>
                                    <td class="cake-text">
                                        <div class="product-text">
                                            <h3>@item.tensp</h3>
                                            <p>Mã sản phẩm: @item.masp @Html.Hidden("masp", item.masp)</p>
                                        </div>
                                    </td>
                                    <td class="quantity" style="vertical-align: top">
                                        <div class="product-right">
                                            <input type="number" style="width: 45%" value=@item.soluong class="text-center" name="soluong">
                                        </div>
                                    </td>
                                    <td class="price" style="padding: 12px;">
                                        <h4>@item.dongia</h4>
                                    </td>
                                    <td class="top-remove">
                                        <h4>@item.thanhtien</h4>
                                        <div class="close">
                                            <h5>Xoá</h5>
                                        </div>
                                    </td>
                                    <td><input type="submit" class="btn btn-danger" value="Cập Nhật" /></td>

                                </tr>
                            }
                        }
                        else
                        {

                            <tr class="cake-top">
                                <td class="cakes">
                                    <div class="product-img">
                                        <img style="max-width:50%" src=@Url.Content("~/Content/images/"+item.hinhanh)>
                                    </div>
                                </td>
                                <td class="cake-text">
                                    <div class="product-text">
                                        <h3>@item.tensp</h3>
                                        <p>Mã sản phẩm: @item.masp</p>
                                    </div>
                                </td>
                                <td class="quantity">
                                    <div class="product-right">
                                        @item.soluong
                                    </div>
                                </td>
                                <td class="price">
                                    <h4>@item.dongia</h4>
                                </td>
                                <td class="top-remove">
                                    <h4>@item.thanhtien</h4>
                                    <div class="close">
                                        <h5 class="text-white">@Html.ActionLink("Chỉnh sửa", "UpdateCart", new { @id = item.masp, @class = "text-white" })</h5>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>
<div class="copy-right">
    <p>© 2019 - 2021 HARPER 7 COFFEE & TEA   </a></p>
</div>

